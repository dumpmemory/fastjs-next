{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es6",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // output type file
    "declaration": false,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
  }
}
