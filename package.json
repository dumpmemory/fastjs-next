{
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter=./packages/** run build",
    "build:site": "pnpm -r --filter=./site run build",
    "prod": "pnpm -r --filter=./packages/** run prod",
    "dev": "pnpm --parallel --filter=./** run dev",
    "test": "pnpm -r --filter=./packages/** run test",
    "type-check": "pnpm -r --filter=./packages/** run type-check",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "author": "xiaodong2008 <hi@xiaodong.moe>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.7.5",
    "cross-env": "^7.0.3",
    "markdown-table": "^3.0.3",
    "prettier": "^3.3.3",
    "pretty-bytes": "^6.1.1",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3"
  }
}
